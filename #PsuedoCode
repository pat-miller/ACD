	#todo 
}


void loop(){
	if inpState == True{	#Waiting for button to be pressed
		if inpSound < VALUE{# DETERMINE THIS
			move(Direction)
		} 
		else{
			detect_sensor(currentSensor)
			drop_down()
		}
	}
}
